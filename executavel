import networkx as nx
import matplotlib.pyplot as plt
import prim as p

G = nx.Graph()
A=nx.Graph()

for x in p.arvore_geradora:
    G.add_edge(int(x[0]),int(x[1]))

nx.draw_networkx(G,pos=nx.spring_layout(G),with_labels=True)
plt.show()


with open('valores.txt','r') as arquivo:
    tabela = arquivo.readlines()
for x in tabela:
    peso=x.split(' ')
    A.add_edge(int(peso[0]),int(peso[1]))

nx.draw_networkx(A,pos=nx.spring_layout(G),with_labels=True)  
plt.show()
